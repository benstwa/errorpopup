{
    "name": "thinkTRIBE Error Popup",
    "description": "Preview errors on the wallboard",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://portal.thinktribe.com/",
        "https://portal-staging.thinktribe.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://portal.thinktribe.com/*/clientWallboard*",
                "https://portal-staging.thinktribe.com/*/clientWallboard*"
            ],
            "js": [
                "jquery-3.6.0.min.js",
                "jquery.hoverIntent.min.js",
                "inject.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "hover.js",
                "hover.css"
            ],
            "matches": [
                "https://portal.thinktribe.com/*",
                "https://portal-staging.thinktribe.com/*"
            ]
        }
    ],
    "action": {}
}
